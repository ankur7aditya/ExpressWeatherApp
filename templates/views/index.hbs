                <img src="https://res.cloudinary.com/practicaldev/image/fetch/s--NC_OIkwT--/c_imagga_scale,f_auto,fl_progressive,h_1080,q_auto,w_1080/https://thepracticaldev.s3.amazonaws.com/i/gfaip0xbfia05oa7kve6.png"
                    alt="Image 2">
            </div>
            <div class="slide fade image3">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT_4ZlfUlTvSDZBYE7fTpQpESB-9_hEcitZdSseF-tdrmvuvHCam72KqnK7tSoA68Uce7g&usqp=CAU"
                    alt="Image 3">
            </div>

            <!-- Add more slides as needed -->

            <!-- Navigation buttons -->
            <a class="prev" onclick="changeSlide(-1)">&#10094;</a>
            <a class="next" onclick="changeSlide(1)">&#10095;</a>
        </div>

    </div>
    <script>
        let currentSlide = 0;

        // Function to change the slide
        function changeSlide(n) {
            showSlide(currentSlide += n);
        }

        // Function to display the current slide
        function showSlide(n) {
            const slides = document.getElementsByClassName("slide");

            // Loop back to the first slide if at the end
            if (n >= slides.length) {
                currentSlide = 0;
            } else if (n < 0) {
                currentSlide = slides.length - 1;
            } else {
                currentSlide = n;
            }

            // Hide all slides
            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }

            // Display the current slide
            slides[currentSlide].style.display = "block";
        }

        // Automatically advance to the next slide every 2 seconds
        setInterval(() => {
            changeSlide(1);
        }, 4000);

        // Display the initial slide
        showSlide(currentSlide);

    </script>
</body>

